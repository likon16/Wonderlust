<% layout ("/layouts/boilarplate"); %>
<div class="row mt-3">
    <div class="col-7 offset-3">
        
    <h2>Edit Your Information</h2>

<form method="post" action="/listings/<%= listing._id%>?_method=PUT" >

    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
    <input type="text" name="listing[title]"id="title" value="<%=listing.title %>"class="form-control">
   </div>

   <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea name="listing[description]" id="description" class="form-control"><%=listing.description %> </textarea>
</div>
<div class="mb-3">
    <label for="image" class="form-label">Image</label>
    <input type="text" name="listing[image]" id="image" value="<%=listing.image %>"class="form-control">
</div>
<div class="row">
<div class="mb-3 col-md-4">
    <label for="price" class="form-label">Price</label>
    <input type="number" name="listing[price]" id="price" value="<%=listing.price %>"class="form-control">
   </div>
   <div class="mb-3 col-md-5">
    <label for="country" class="form-label">Country</label>
    <input type="text" name="listing[country]" id="country" value="<%=listing.country %>"class="form-control">
</div>
</div>
   
<div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <input type="text" name="listing[location]" id="location" value="<%=listing.location %> "class="form-control">
    </div>  
    <button class="btn btn-dark edit-btn mb-3">Add</button>
</form>

</div>
</div>