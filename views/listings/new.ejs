<% layout ("/layouts/boilarplate"); %>

    <div class="row mt-3">
        <div class="col-7 offset-2">
            
    <h2>Create your</h2>

<form action="/listings" method="post">

    <div class="mb-3">
        <label for="title" class="form-label">Title*</label>
        <input type="text" name="listing[title]"id="title" placeholder="Enter title" class="form-control" required>
    </div>

    <div class="mb-3">
        <label for="descrition" class="form-label">Description</label>
        <textarea name="listing[description]" id="description"  class="form-control"></textarea>
    </div>
   
    
   <div class="mb-3">
    <label for="image" class="form-label">Image</label>
    <input type="text" name="listing[image][url]" id="image" placeholder="Enter your image URL/link" class="form-control">
   </div>
    <div class="row">
        <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input type="number" name="listing[price]" id="price" placeholder="1499" class="form-control">
          </div>
          <div class="mb-3 col-md-5">
            <label for="country" class="form-label">Country</label>
            <input type="text" name="listing[country]" id="country" placeholder="India" class="form-control">
          </div>
    </div>
 
    
    <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" name="listing[location]" id="location" placeholder="Coochbehar" class="form-control">
        
        <button class="btn btn-dark add-btn mt-4">Add</button>
        <!-- <br><br> -->
    </div>
    
</form>

</div>

</div>
