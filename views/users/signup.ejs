<% layout ("/layouts/boilarplate"); %>


<style>
/* Center the sign-up box */
.signup-box {
  background: #ffffff;
  padding: 30px;
  border-radius: 15px;
  box-shadow: 0 15px 25px rgba(0, 0, 0, 0.15);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  max-width: 400px;
  margin: 0 auto;
  margin-top: 2rem;
}

.signup-box:hover {
  transform: translateY(-5px);
  box-shadow: 0 20px 30px rgba(0, 0, 0, 0.2);
}

.signup-box h2 {
  text-align: center;
  margin-bottom: 25px;
  font-weight: 600;
  color: #333;
}

.signup-box .form-label {
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
}

.signup-box input {
  width: 100%;
  border-radius: 10px;
  padding: 12px;
  margin-bottom: 15px;
  border: 1px solid #ddd;
  transition: all 0.3s ease;
  height: 2rem;
}

.signup-box input:focus {
  box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
  border-color: #007bff;
}
/* .signup-box,
.inp-h{
  height: 2rem;
} */

.signup-box .btn-primary {
  width: 100%;
  border-radius: 10px;
  padding: 12px;
  font-weight: 500;
  background: linear-gradient(45deg, #007bff, #00c6ff);
  border: none;
  transition: background 0.3s ease;
}

.signup-box .btn-primary:hover {
  background: linear-gradient(45deg, #0056b3, #0090c5);
}

/* Responsive Design */

/* Medium Devices (Tablets, 768px and up) */
@media (max-width: 991.98px) {
  .signup-box {
    max-width: 90%;
    /* padding: 25px  ; */
    margin-top: 5rem;
  }

  .signup-box h2 {
    font-size: 1.6rem;
  }

  .signup-box input,
  .signup-box .btn-primary {
    padding: 10px;
    font-size: 1rem;
  }

  .signup-box button[type="submit"] {
    width: 100%;
    height: 3rem;
  }
}

/* Small Devices (Phones, less than 768px) */
@media (max-width: 767.98px) {
  .signup-box {
    width: 100%;
    padding: 20px;
    margin-left: 16px;
    margin-top: 2rem;
  }

  .signup-box h2 {
    font-size: 1.4rem;
  }

  .signup-box input,
  .signup-box .btn-primary {
    padding: 10px;
    font-size: 0.95rem;
  }

  .signup-box button[type="submit"] {
    width: 100%;
  }
}

.signup-box button[type="submit"] {
  align-items: center;
  width: 5rem;
  height: 2.5rem;
  
}
</style>
<div class="row mt-4">
  <div class="col-5 offset-3 signup-box">
    <h2>Sign Up</h2>

   <form method="post" action="/signup" novalidate class="needs-validation">
  <div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input type="text" name="username" id="username" class="form-control inp-h" required />
  </div>
  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" name="email" id="email" class="form-control inp-h" required />
  </div>
  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input type="password" name="password" id="password" class="form-control inp-h" required />
  </div>
  
  <button type="submit" class="btn btn-primary">Sign Up</button>
</form>

  

        </div>
        </div>